{
  "name": "mojs",
  "description": "Modern Open Journal System (MOJS) built using the Titan Pomade stack.",
  "version": "0.1.0",
  "author": "MedDSAI",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "postinstall": "cd frontend && npm install"
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "jquery-ui": "^1.14.1",
    "jquery-validation": "~1.21.0",
    "luxon": "^3.6.1",
    "ofetch": "^1.4.1",
    "tiny-emitter": "^2.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/jquery": "^3.5.17",
    "@types/jqueryui": "^1.12.18",
    "@types/node": "^20.8.0",
    "@types/tinymce": "^4.7.61",
    "@types/uuid": "^9.0.7",
    "@types/vue": "^3.3.0",
    "@vue/compiler-sfc": "^3.3.5",
    "babel-loader": "^9.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-vue-type-imports": "^0.1.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@rushstack/eslint-patch": "^1.11.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "cypress": "^13.17.0",
    "cypress-failed-log": "2.10",
    "cypress-file-upload": "^5.0.8",
    "cypress-iframe": "^1.0.1",
    "cypress-wait-until": "^2.0.1",
    "dompurify": "^3.2.5",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "google-closure-compiler-java": "^20200719.0.0",
    "husky": "^8.0.3",
    "less": "^4.3.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^3.4.17"
  },
  "prettier": {
    "$schema": "https://json.schemastore.org/prettierrc",
    "bracketSpacing": false,
    "singleQuote": true,
    "useTabs": true,
    "htmlWhitespaceSensitivity": "ignore",
    "proseWrap": "never",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "tailwindcss": {
        "config": "./lib/ui-library/tailwind.config.js"
      }
    }
  },
  "lint-staged": {
    "**/*.php": [
      "php lib/pkp/lib/vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php --allow-risky=yes",
      "php lib/pkp/lib/vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php --allow-risky=yes --dry-run"
    ]
  }
}
